<div class="container box mt2">

  <span class="title mb has-text-primary">Registrar-se</span>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <div class="field mt">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true, class: "input is-rounded is-primary" %>
    </div>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, class: "input is-rounded is-primary" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> caracteres mÃ­nimos)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: "input is-rounded is-primary" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: "input is-rounded is-primary" %>
    </div>

    <div class="actions has-text-centered">
      <button class="button is-primary is-rounded" type="submit" name="action">Registrar</button>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>